<body>
    <!-- 视频背景容器 -->
    <video id="bgVideo" class="video-bg" autoplay loop muted playsinline></video>

    <div class="container">
        <h1>Hi，又见面了💐</h1>
        <p class="time-text"></p >
        <a href=" ">返回首页</a >
    </div>

    <script>
        // 根据时间切换视频和文字
        function updateContentByTime() {
            const video = document.getElementById('bgVideo');
            const timeText = document.querySelector('.time-text');
            const hour = new Date().getHours();
            let videoSrc, text, bgColor;

            // 早晨 (6-10点)：zao.mp4
            if (hour >= 6 && hour < 10) {
                videoSrc = 'videos/zao.mp4';
                text = '早上好呀，新的一天开始了～';
                bgColor = '#e6f7ff';
            }
            // 中午 (10-14点)：wuwu.mp4
            else if (hour >= 10 && hour < 14) {
                videoSrc = 'videos/wuwu.mp4';
                text = '中午好，记得好好吃饭哦～';
                bgColor = '#fff8e6';
            }
            // 下午 (14-18点)：pp.mp4
            else if (hour >= 14 && hour < 18) {
                videoSrc = 'videos/pp.mp4';
                text = '下午好，享受悠闲的午后时光吧～';
                bgColor = '#f5f0ff';
            }
            // 晚上 (18-24点及0-6点)：wang.mp4
            else {
                videoSrc = 'videos/wang.mp4';
                text = '晚上好，今天也辛苦啦～';
                bgColor = '#f5f5f5';
            }

            // 更新视频源
            if (video.src !== videoSrc) {
                video.src = videoSrc;
                video.load(); // 加载新视频
            }

            // 更新文字和备用背景色（视频加载失败时显示）
            timeText.textContent = text;
            document.body.style.backgroundColor = bgColor;
        }

        // 初始化
        updateContentByTime();

        // 每小时检查一次时间，更新内容
        setInterval(updateContentByTime, 3600000);
    </script>
</body>
</html>
