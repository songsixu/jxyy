    <script>
        // æ ¹æ®æ—¶é—´åˆ‡æ¢è§†é¢‘å’Œæ–‡å­—
        function updateContentByTime() {
            const video = document.getElementById('bgVideo');
            const timeText = document.querySelector('.time-text');
            const hour = new Date().getHours();
            let videoSrc, text, bgColor;

            // æ—©æ™¨ (6-10ç‚¹)ï¼šzao.mp4
            if (hour >= 6 && hour < 10) {
                videoSrc = 'videos/zao.mp4';
                text = 'æ—©ä¸Šå¥½å‘€ï¼Œæ–°çš„ä¸€å¤©å¼€å§‹äº†ï½';
                bgColor = '#e6f7ff';
            }
            // ä¸­åˆ (10-14ç‚¹)ï¼šwuwu.mp4
            else if (hour >= 10 && hour < 14) {
                videoSrc = 'videos/wuwu.mp4';
                text = 'ä¸­åˆå¥½ï¼Œè®°å¾—å¥½å¥½åƒé¥­å“¦ï½';
                bgColor = '#fff8e6';
            }
            // ä¸‹åˆ (14-18ç‚¹)ï¼špp.mp4
            else if (hour >= 14 && hour < 18) {
                videoSrc = 'videos/pp.mp4';
                text = 'ä¸‹åˆå¥½ï¼Œäº«å—æ‚ é—²çš„åˆåæ—¶å…‰å§ï½';
                bgColor = '#f5f0ff';
            }
            // æ™šä¸Š (18-24ç‚¹åŠ0-6ç‚¹)ï¼šwang.mp4
            else {
                videoSrc = 'videos/wang.mp4';
                text = 'æ™šä¸Šå¥½ï¼Œä»Šå¤©ä¹Ÿè¾›è‹¦å•¦ï½';
                bgColor = '#f5f5f5';
            }

            // æ›´æ–°è§†é¢‘æº
            if (video.src !== videoSrc) {
                video.src = videoSrc;
                video.load(); // åŠ è½½æ–°è§†é¢‘
            }

            // æ›´æ–°æ–‡å­—å’Œå¤‡ç”¨èƒŒæ™¯è‰²ï¼ˆè§†é¢‘åŠ è½½å¤±è´¥æ—¶æ˜¾ç¤ºï¼‰
            timeText.textContent = text;
            document.body.style.backgroundColor = bgColor;
        }

        // åˆå§‹åŒ–
        updateContentByTime();

        // æ¯å°æ—¶æ£€æŸ¥ä¸€æ¬¡æ—¶é—´ï¼Œæ›´æ–°å†…å®¹
